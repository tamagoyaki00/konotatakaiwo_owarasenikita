<%= turbo_frame_tag "opinion_#{opinion.id}" do %>
  <div class="flex items-center mb-2">
    <img src="<%= opinion.user.google_image_url %>" alt="<%= opinion.user.name %>" class="w-6 h-6 rounded-full">
    <div class="ml-2 font-semibold">
      <%= opinion.user.name %>
    </div>
  </div>
  <p class="mt-2"><%= opinion.content %></p>

    <p><%= opinion.content %></p>
    <%= render 'shared/opinion_reaction_button', opinion: opinion %>

  <% if current_user&.own?(opinion) %>
    <div class="mt-2 text-right">
      <%= link_to edit_opinion_path(opinion), data: { turbo_frame: "opinion_#{opinion.id}" }, class: "text-gray-500 hover:text-gray-900 mr-2" do %>
        <%= t('.edit') %><i class="fa-solid fa-pen-to-square"></i>
      <% end %>

      <%= link_to opinion_path(opinion), data: { turbo_method: :delete, turbo_confirm: t('.delete_confirm')}, class: "text-red-500 hover:text-red-700" do %>
        <%= t('.destroy')%><i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  <% end %>
<% end %>