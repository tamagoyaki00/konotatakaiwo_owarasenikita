<%= turbo_frame_tag "opinion_#{opinion.id}" do %>
  <div class="flex items-center mb-2">
    <img src="<%= opinion.user.google_image_url %>" alt="<%= opinion.user.name %>" class="w-6 h-6 rounded-full">
    <div class="ml-2 font-semibold">
      <%= opinion.user.name %>
    </div>
  </div>
  <p class="mt-2"><%= opinion.content %></p>

  <% if current_user&.own?(opinion) %>
    <div class="mt-2 text-right">
      <%= link_to edit_opinion_path(opinion), data: { turbo_frame: "opinion_#{opinion.id}" }, class: "hover:text-blue mr-2" do %>
        編集<i class="fa-solid fa-pen-to-square"></i>
      <% end %>

      <%= link_to opinion_path(opinion), data: { turbo_method: :delete, turbo_confirm: t('.delete_confirm')}, class: "hover:text-red-500" do %>
        削除<i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  <% end %>
<% end %>