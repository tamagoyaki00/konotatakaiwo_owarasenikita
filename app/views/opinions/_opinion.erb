<div id="opinion-<%= opinion.id %>" class="mb-4 p-4">
  <div class="flex items-center mb-2">
    <img src="<%= opinion.user.google_image_url %>" alt="<%= opinion.user.name %>" class="w-6 h-6 rounded-full">
    <div class="ml-2 font-semibold">
      <%= opinion.user.name %>
    </div>
  </div>
  <p class="mt-2"><%= opinion.content %></p>

  <% if current_user&.own?(opinion) %>
    <div class="mt-2 text-right">
      <%= link_to "編集", edit_question_opinion_path(opinion.question, opinion), 
                  class: "text-blue-500 hover:underline mr-2" %>
      <%= link_to "削除", question_opinion_path(opinion.question, opinion), 
                  method: :delete, confirm: "削除しますか？", 
                  class: "text-red-500 hover:underline" %>
    </div>
  <% end %>
</div>