<% flash.each do |type, message| %>
  <div class="fixed top-20 z-50 right-4 p-3 rounded-full shadow-lg max-w-sm <%= flash_class_for(type) %> transform transition-transform duration-500 ease-in-out translate-x-full opacity-0 pointer-events-auto"
       data-controller="flash-message"
       data-action="animationend->flash-message#remove"
       data-flash-message-target="container">
    <div class="flex items-center">
      <% if type.to_sym == :notice %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640" class="w-6 h-6 mr-1">
