<% if @questions.present? %>
<div class="h-full overflow-y-auto">
  <div class="container mx-auto p-4">
    <div class="questions-container">
      <%= turbo_frame_tag "questions-page-#{@questions.current_page}" do %>
        <div class="mb-8">
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 justify-items-center">
            <%= render @questions %>
          </div>
        </div>

        <% if @questions.next_page %>
          <%= turbo_frame_tag "questions-page-#{@questions.next_page}",
              loading: :lazy,
              src: questions_path(page: @questions.next_page) do %>
            <div class="mb-8">
              <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 justify-items-center">
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<% else %>
  <p><%= t('.no_questions') %></p>
<% end %>